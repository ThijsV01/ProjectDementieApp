@inherits LayoutComponentBase
@inject ISqlBatteryRepository SqlBatteryRepository
@using SimpleMqtt
@inject SimpleMqttClient mqttClient

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="battery">
                <div class="battery-level" style="width:@batteryStatus%; background:@BatteryColor">
                    <span class="battery-text">@batteryStatus%</span>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
@code {
    private int batteryStatus;
    protected override async Task OnInitializedAsync()
    {
        batteryStatus = await SqlBatteryRepository.GetBatteryStatusInMillivoltsAsync();
    }
    private string BatteryColor =>
    batteryStatus < 10 ? "red" :
    batteryStatus < 20 ? "orange" :
    "green";

}